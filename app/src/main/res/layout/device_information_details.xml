<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:layout_margin="5dp"
                  android:padding="15dp"
                  android:background="@drawable/infor_shape"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                <TextView
                    android:text="Tên:"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nameDevice"
                    android:text="Dell Voutro"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingRight="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/infor_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mã thiết bị:"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/parentCode"
                android:text="US2017MTA0001"
                android:textSize="16dp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/infor_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nguốn gốc:"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/origin"
                android:text="China"
                android:textSize="16dp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/infor_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ngày sản xuất:"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dateOfProduce"
                android:text="12/3/2017"
                android:textSize="16dp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/infor_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Người quản lí:"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/staff"
                android:text="Nguyen Van Lin"
                android:textSize="16dp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/infor_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/digital"
                    android:text="Thông số kĩ thuật:"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:layout_span="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </TableRow>
    </TableLayout>
</LinearLayout>