<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgDevice"
        android:src="@drawable/device"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgDevice"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameDeviceInventory"
            android:text="Dell Voutro"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="480px"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/codeParent"
            android:textStyle="italic"
            android:layout_below="@+id/nameDeviceInventory"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:id="@+id/editTextBox"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:background="@drawable/row_shape"
        android:layout_width="100px"
        android:layout_height="80px" />
    <EditText
        android:id="@+id/noteDeviceSave"
        android:visibility="invisible"
        android:layout_width="30px"
        android:layout_height="30px" />
</RelativeLayout>