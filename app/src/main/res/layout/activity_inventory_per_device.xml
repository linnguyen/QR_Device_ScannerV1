<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ryne.qr_device_scanner.ActivityWareHouse">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarInventoryPerDevice"
        android:title="Device Scanner"
        android:layout_width="match_parent"
        android:background="#00BCD4"
        android:layout_height="56dp">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="TÊN THIẾT BỊ"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="DELL VOUTRO"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:textColor="#9C27B0"
            android:layout_marginLeft="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="SỐ THIẾT BỊ THỰC TẾ"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <EditText
           android:hint="Số thiết bị thực tế"
           android:textSize="16dp"
           android:background="@drawable/row_shape"
           android:inputType="number"
           android:layout_marginTop="30px"
           android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="TÌNH TRẠNG"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Bình thường"
            android:textSize="16dp"
            android:background="@drawable/row_shape"
            android:inputType="number"
            android:layout_marginTop="30px"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Hỏng"
            android:textSize="16dp"
            android:background="@drawable/row_shape"
            android:inputType="number"
            android:layout_marginTop="30px"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Xin thanh lí"
            android:textSize="16dp"
            android:background="@drawable/row_shape"
            android:inputType="number"
            android:layout_marginTop="30px"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="GHI CHÚ"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Ghi chú"
            android:background="@drawable/row_shape"
            android:layout_marginTop="30px"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Gửi"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>