<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgDevice"
        android:src="@drawable/tool"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgDevice"
        android:layout_marginLeft="40px"
        android:layout_width="240dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameDeviceInventory"
            android:text="Dell Voutro"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/codeParent"
            android:text="D0001"
            android:textStyle="italic"
            android:layout_below="@+id/nameDeviceInventory"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/description"
            android:text="This is device for lab room in IT department"
            android:textColor="#3B5998"
            android:layout_below="@+id/codeParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvNumberLeft"
        android:text="4"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivForWard"
        android:src="@drawable/right_forward"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>