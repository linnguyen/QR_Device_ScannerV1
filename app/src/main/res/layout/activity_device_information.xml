<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ryne.qr_device_scanner.ActivityDeviceInformation">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarDeviceInformation"
        android:title="Quay lại"
        android:layout_width="match_parent"
        android:background="#00BCD4"
        android:layout_height="56dp">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:text="THÔNG TIN TIẾT BỊ"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:textColor="#37474F"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_device_information_detail"/>
    </LinearLayout>
    <TextView
        android:text="THÔNG SỐ KĨ THUẬT"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:textColor="#37474F"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_digital"/>
    </LinearLayout>

</LinearLayout>